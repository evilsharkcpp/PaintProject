<UserControl x:Class="GUI_WPF.Controls.Point2dViewer"
             x:Name="Viewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label x:Name="FirstFieldLabel" Grid.Row="0" Margin="10,10,10,10"/>
            <TextBox x:Name="FirstFieldTextBox" Margin="10,10,10,10" Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label x:Name="SecondFieldLabel" Grid.Row="0" Margin="10,10,10,10"/>
            <TextBox x:Name="SecondFieldTextBox" Margin="10,10,10,10" Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>
